<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer_Issue_layout"
    tools:context=".IssueReview">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="start"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/admin_menu" />

    <LinearLayout
        android:background="#00103D"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="-30dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/nav3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="83dp"
                android:layout_marginEnd="83dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="ISSUE REVIEW"
                android:textColor="#FFFEFE"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="-25dp"
                android:layout_marginBottom="-10dp"
                android:src="@drawable/profile" />

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="622dp"
                android:layout_gravity="center"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="480dp"
                        >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="@string/Issue"
                    android:textColor="#780000"
                    android:textSize="30dp"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold" />

                        <TextView
                            android:layout_width="350dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="100dp"
                            android:layout_marginEnd="35dp"
                            android:layout_marginStart="35dp"
                            android:textSize="15dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="center"
                            android:text="Please let us know whether you are facing any issue regarding your payments or any other reason we are here to help you."
                            android:textColor="#FFFFFF" />

                        <EditText
                            android:id="@+id/textArea_info"
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="250dp"
                            android:background="@drawable/edit"
                            android:backgroundTint="#000000"
                            android:textColor="#FFFFFF"
                            android:hint="Enter Issue here "
                            android:overScrollMode="always"
                            android:textAlignment="center"
                            android:inputType="textMultiLine"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:lines="6"
                            android:scrollHorizontally="false"
                            android:padding="20dp"
                            android:textColorHint="#780000" />
                        <Button
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="400dp"
                            android:background="@drawable/button"
                            android:text="Login"
                            android:textColor="#fff" />

                    </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
